%section#wwdc-2014.conference
  %header
    %img{src: '/images/wwdc-2014.png', width: 130, height: 56}

    %hgroup
      %h1 WWDC 2014
      %h2 iOS 8, OS X Yosemite, Xcode 6, Swift

  - tracks = @sessions[2014].group_by(&:track)
  - groups = [["Special Events", "Frameworks"], ["Services", "Tools", "Graphics and Games"], ["Media", "Core OS"]]
  - for group in groups
    .group
      - for track in group
        - sessions = tracks[track]
        %section.track{id: track.downcase.gsub(/\s+/, "-")}
          %h1= track
          %dl.sessions
            - for session in sessions
              %dt{id: "session-#{session.number}"}= session.number
              %dd.title
                %a{href: url(session), title: session.title}= session.title + ("*" unless session.transcribed?).to_s
